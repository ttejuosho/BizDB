<div id="result"></div>

<script>
    var xhr = new XMLHttpRequest();
    xhr.timeout = 5000;
    xhr.onreadystatechange = function (e) {
        console.log(this);
        if (xhr.readyState === 4) {
            if (xhr.status === 200) {
                $("#result").html(xhr.response);
            } else {
                console.error("XHR didn't work: ", xhr.status);
            }
        }
    }
    xhr.ontimeout = function () {
        console.error("request timedout: ", xhr);
    }
    
    xhr.send();
    $('.navbar').addClass('mb-0');
    $('body').addClass('pt-0');
</script>