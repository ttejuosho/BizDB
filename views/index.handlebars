      $("#goSearch").click(()=>{
        loadBusinessData();
    });

    $(document).keypress(function(e) {
        var keycode = (e.keyCode ? e.keyCode : e.which);
        if (keycode == '13' && $('#searchBy')[0].selectize.getValue().length > 0) {
            loadBusinessData();
        }
    });
    function loadBusinessData(){
        fetch('/api/search/' + $('#searchBy').val();).then((data)=>{
