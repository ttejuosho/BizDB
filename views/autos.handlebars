<main role="main">
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Chicago Auctions Database</h1>
      <p>Faceted Search (Make → Model → Year Range)</p>

      <form id="facetForm">
        <div class="form-row">
          <div class="col-12 col-lg-10">
            <div class="card p-3 mb-3">
              <div class="form-row">
                <div class="col-12 col-md-4 mb-2">
                  <label class="font-weight-bold mb-1">Makes</label>
                  <select
                    id="makesSelect"
                    class="form-control"
                    multiple
                  ></select>
                  <small class="text-muted">Select one or more makes.</small>
                </div>

                <div class="col-12 col-md-4 mb-2">
                  <label class="font-weight-bold mb-1">Models</label>
                  <select
                    id="modelsSelect"
                    class="form-control"
                    multiple
                  ></select>
                  <small class="text-muted">Populated from selected makes.</small>
                </div>

                <div class="col-6 col-md-2 mb-2">
                  <label class="font-weight-bold mb-1">From Year</label>
                  <input
                    id="fromYear"
                    type="number"
                    class="form-control"
                    placeholder="e.g. 2015"
                  />
                </div>

                <div class="col-6 col-md-2 mb-2">
                  <label class="font-weight-bold mb-1">To Year</label>
                  <input
                    id="toYear"
                    type="number"
                    class="form-control"
                    placeholder="e.g. 2026"
                  />
                </div>
              </div>

              <div class="form-row mt-2">
                <div class="col-12 col-md-6 mb-2">
                  <label class="font-weight-bold mb-1">VIN (optional)</label>
                  <input
                    id="vinQuery"
                    type="text"
                    class="form-control"
                    placeholder="Filter by VIN contains..."
                  />
                </div>

                <div class="col-6 col-md-3 mb-2">
                  <label class="font-weight-bold mb-1">Limit</label>
                  <input
                    id="limit"
                    type="number"
                    class="form-control"
                    value="100"
                    min="1"
                    max="1000"
                  />
                </div>

                <div class="col-6 col-md-3 mb-2">
                  <label class="font-weight-bold mb-1">Offset</label>
                  <input
                    id="offset"
                    type="number"
                    class="form-control"
                    value="0"
                    min="0"
                  />
                </div>
              </div>

              <div class="form-row mt-3">
                <div class="col-12 col-md-4 mb-2">
                  <button
                    type="button"
                    class="btn btn-dark btn-block"
                    id="applyFiltersBtn"
                  >
                    Apply Filters
                  </button>
                </div>
                <div class="col-12 col-md-4 mb-2">
                  <button
                    type="button"
                    class="btn btn-outline-secondary btn-block"
                    id="resetFiltersBtn"
                  >
                    Reset
                  </button>
                </div>
                <div class="col-12 col-md-4 mb-2">
                  <button
                    type="button"
                    class="btn btn-outline-primary btn-block"
                    id="refreshFacetsBtn"
                  >
                    Refresh Facets
                  </button>
                </div>
              </div>

              <div class="mt-3">
                <div class="d-flex flex-wrap">
                  <div class="mr-4 mb-2">
                    <div class="font-weight-bold">Years (available)</div>
                    <div id="yearsFacet" class="small text-muted">—</div>
                  </div>
                  <div class="mr-4 mb-2">
                    <div class="font-weight-bold">Selected</div>
                    <div
                      id="selectedFacetSummary"
                      class="small text-muted"
                    >—</div>
                  </div>
                  <div class="mb-2">
                    <div class="font-weight-bold">Status</div>
                    <div id="statusText" class="small text-muted">Ready.</div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-12">
        <p id="searchInfo" class="mt-2"></p>
      </div>
    </div>

    <div class="row" id="resultsDiv"></div>

    <div hidden id="spinner" class="text-center my-4">
      <div class="spinner-border" role="status"></div>
      <div class="mt-2">Loading…</div>
    </div>
  </div>
</main>